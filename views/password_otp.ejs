<body>
    <%- include('includes/cookie-min.ejs') %>

	<%- include('includes/navbar-min.ejs') %>

<div class="minHeight-100vh formContainer">
<form id="form" onsubmit="loading()" action="/user/request-change-password" method="POST">
    <h1 class="title"><span style="color: var(--primary-color);">&gt;</span> otp</h1>

	<div class="otp-form">

        <div class="otp-input-fields inputs">
            <input type="text" class="otp__digit otp__field__1 input-box" maxlength="1">
            <input type="text" class="otp__digit otp__field__2 input-box" maxlength="1">
            <input type="text" class="otp__digit otp__field__3 input-box" maxlength="1">
            <input type="text" class="otp__digit otp__field__4 input-box" maxlength="1">
            <input type="text" class="otp__digit otp__field__5 input-box" maxlength="1">
            <input type="text" class="otp__digit otp__field__6 input-box" maxlength="1">
        </div>

	</div>

    <button id="submit-btn" class="btn-bg margin-y15px flex-center">Continua</button>

</form>

<script>
    var otp_inputs = document.querySelectorAll(".otp__digit")
var mykey = "0123456789qwertyuiopasdfghjklzxcvbnm".split("")
otp_inputs.forEach((_)=>{
  _.addEventListener("keyup", handle_next_input)
})
function handle_next_input(event){
  let current = event.target
  let index = parseInt(current.classList[1].split("__")[2])
  current.value = event.key
  
  if(event.keyCode == 8 && index > 1){
    current.previousElementSibling.focus()
  }
  if(index < 6 && mykey.indexOf(""+event.key+"") != -1){
    var next = current.nextElementSibling;
    next.focus()
  }
  var _finalKey = ""
  for(let {value} of otp_inputs){
      _finalKey += value
  }
  if(_finalKey.length == 6){
    document.querySelector("#_otp").classList.replace("_notok", "_ok")
    document.querySelector("#_otp").innerText = _finalKey
  }else{
    document.querySelector("#_otp").classList.replace("_ok", "_notok")
    document.querySelector("#_otp").innerText = _finalKey
  }
}
</script>

</div>
    
    <% if (typeof errors != 'undefined') { %> 
        <div id="alertbanner" class="errorbanner">
            <ul style="list-style: none; padding-left: 0;">
                <% errors.forEach(error => { %>
                    <li id="alertmessage"><i class="fa-solid fa-circle-exclamation"></i> <%= error.message %></li>
                <% }) %> 
            </ul>
        </div>
        <script>
            document.getElementById("alertbanner").style.animation = "showAlert 0.5s ease-in-out forwards";
        </script>
    <% } %>
    


    <% if(messages.success_msg) { %>

        <div id="alertbanner" class="successbanner">
            <p id="alertmessage"><i class="fa-solid fa-check"></i> <%= messages.success_msg %></p>
        </div>
        <script>
            document.getElementById("alertbanner").style.animation = "showAlert 0.5s ease-in-out forwards";
        </script>

    <% } %>

    

    <% if (messages.error) { %>
        <div id="alertbanner" class="errorbanner">
            <p id="alertmessage"><i class="fa-solid fa-circle-exclamation"></i> <%= messages.error %></p>
        </div>
        <script>
            document.getElementById("alertbanner").style.animation = "showAlert 0.5s ease-in-out forwards";
        </script>
    <% } %>


    <%- include('includes/footer-min.ejs') %>

<script>
    $('input').on('change', function(){
         if($(this).val()==""){
            $(this).removeClass('inserted');
         }
         if($(this).val()!=""){
            $(this).addClass('inserted');
         }
    });

    $('input').on('focus', function(){
        labelID = this.id + "-label";
        $("#"+labelID).css("color", "var(--primary-color)");
        $(this).on("focusout", function() {
            $("#"+labelID).css("color", "#fff");
        });
    });
</script>

<script src="/js/submit-loading.js"></script>

