<title>Reset OTP · Fermi Notify</title>
</head>
<body>
    <%- include('includes/cookie-min.ejs') %>

	<%- include('includes/navbar-min.ejs') %>

<div class="minHeight-100vh formContainer">
<form id="form" onsubmit="loading()" action="/user/change-password" method="POST">
    <h1 class="title"><span style="color: var(--primary-color);">&gt;</span> otp</h1>

	<div class="otp-form">

        <div class="otp-input-fields inputs">
            <input required class="otp-input" type="text" maxlength="1" id="otp1" oninput="focusNext(1)" onkeydown="handleBackspace(event, 1)">
            <input required class="otp-input" type="text" maxlength="1" id="otp2" oninput="focusNext(2)" onkeydown="handleBackspace(event, 2)">
            <input required class="otp-input" type="text" maxlength="1" id="otp3" oninput="focusNext(3)" onkeydown="handleBackspace(event, 3)">
            <input required class="otp-input" type="text" maxlength="1" id="otp4" oninput="focusNext(4)" onkeydown="handleBackspace(event, 4)">
            <input required class="otp-input" type="text" maxlength="1" id="otp5" oninput="focusNext(5)" onkeydown="handleBackspace(event, 5)">
            <input required class="otp-input" type="text" maxlength="1" id="otp6" oninput="focusNext(6)" onkeydown="handleBackspace(event, 6)">
        </div>

	</div>

    <input type="hidden" id="random_code" name="random_code">

    <button id="submit-btn" class="btn-bg margin-y15px flex-center" type="submit">Continua</button>

</form>

<script>
    var otp = "";

    function focusNext(currentInput) {
        otp += document.getElementById(`otp${currentInput}`).value;
        document.getElementById("random_code").value = otp;
        if (currentInput < 6) {
            const nextInput = document.getElementById(`otp${currentInput + 1}`);
            nextInput.focus();
        }
        if (currentInput == 6) {
            document.getElementById("submit-btn").click();
        }
    }

    function handleBackspace(event, currentInput) {
        if (event.key === 'Backspace') {
            event.preventDefault(); // Prevent the default backspace behavior
            const currentInputElem = document.getElementById(`otp${currentInput}`);
            currentInputElem.value = ''; // Clear the current input
            if (currentInput > 1) {
                const prevInput = document.getElementById(`otp${currentInput - 1}`);
                prevInput.focus(); // Move focus to the previous input
            }
        }
        document.getElementById("random_code").value = otp;
    }
</script>

</div>
    
    <% if (typeof errors != 'undefined') { %> 
        <div id="alertbanner" class="errorbanner">
            <ul style="list-style: none; padding-left: 0;">
                <% errors.forEach(error => { %>
                    <li id="alertmessage"><i class="fa-solid fa-circle-exclamation"></i> <%= error.message %></li>
                <% }) %> 
            </ul>
        </div>
        <script>
            document.getElementById("alertbanner").style.animation = "showAlert 0.5s ease-in-out forwards";
        </script>
    <% } %>
    


    <% if(messages.success_msg) { %>

        <div id="alertbanner" class="successbanner">
            <p id="alertmessage"><i class="fa-solid fa-check"></i> <%= messages.success_msg %></p>
        </div>
        <script>
            document.getElementById("alertbanner").style.animation = "showAlert 0.5s ease-in-out forwards";
        </script>

    <% } %>

    

    <% if (messages.error) { %>
        <div id="alertbanner" class="errorbanner">
            <p id="alertmessage"><i class="fa-solid fa-circle-exclamation"></i> <%= messages.error %></p>
        </div>
        <script>
            document.getElementById("alertbanner").style.animation = "showAlert 0.5s ease-in-out forwards";
        </script>
    <% } %>


    <%- include('includes/footer-min.ejs') %>

<script>
    $('input').on('change', function(){
         if($(this).val()==""){
            $(this).removeClass('inserted');
         }
         if($(this).val()!=""){
            $(this).addClass('inserted');
         }
    });

    $('input').on('focus', function(){
        labelID = this.id + "-label";
        $("#"+labelID).css("color", "var(--primary-color)");
        $(this).on("focusout", function() {
            $("#"+labelID).css("color", "#fff");
        });
    });
</script>

<script src="/js/submit-loading.js"></script>

</body>

</html>